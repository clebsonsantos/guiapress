<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>
    <div class="container">
        
        <hr>
        <div class="row mb-2">
        <% result.articles.rows.forEach(article => { %>
            <div class="col-md-6">
              <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                  <h3 class="mb-0"><%= article.title %></h3>
                  <strong class="d-inline-block mb-2 text-primary"><%= article.categoryId %></strong>

                 <!--  <div class="mb-1 text-muted">Nov 12</div> -->
                  <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                  <a href="/<%= article.slug %>" class="stretched-link">Continue lendo...</a>
                </div>
                
              </div>
            </div>
        <% }) %>
    
          </div>
          <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) {%>
                     <a style="float:left" href="/articles/page/<%= result.page - 1%>"> <<< Prev</a>
                 <% }else if(result.page == 2) {%>
                    <a style="float:left" href="/"> <<< Prev</a>
                 <% }%>
                

                <% if(result.next) {%>
              <a style="float:right" href="/articles/page/<%= result.page + 1%>">Next >>></a>
              <% }%>

            </div>
            <hr>
          </div>
          <hr>
        </div>

        <!---->
    </div>
</body>
  
<%- include ('../../partials/footer.ejs') %>
